{% extends 'layouts/index.twig' %}

{% block main %}
    <article itemscope itemtype="http://schema.org/BlogPosting">
        <header>
            <h1 itemprop="name">{{ page.title }}</h1>
            {% include 'includes/info.twig' %}
        </header>
        <div itemprop="text">{{ page.content|content }}</div>
        <footer>
            {% include 'includes/share.twig' %}
        </footer>
    </article>
{% endblock %}
